<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b3626262"
    tools:context="com.dumi.svq_ver10.MainFragments.MainFragment">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/purple">

                <TextView
                    android:id="@+id/text_rate"
                    android:layout_gravity="center"
                    android:text="이번주 과제 달성률"
                    android:textSize="25dp"
                    android:padding="30dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nanum_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_height="25dp"
                    android:layout_width="match_parent"
                    android:text=""
                    android:background="@color/gray_light"
                    android:fontFamily="@font/nanum_regular"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/main_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="89%"
                        android:textSize="18pt"
                        android:fontFamily="@font/nanum_light"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="30dp"
                        android:layout_gravity="center"/>
                    <ProgressBar
                        android:id="@+id/progressBar3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@drawable/pb_circle_purple"
                        android:max="100"
                        android:progress="89"
                        android:progressDrawable="@drawable/pb_circle_purple"
                        android:secondaryProgress="100" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@color/white">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/alram"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignStart="@+id/line1"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_send"/>
                    <TextView
                        android:id="@+id/text_alram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="새로운 과제"
                        android:layout_toRightOf="@+id/alram"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/nanum_light"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        />
                        <ImageView
                            android:id="@+id/line1"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginHorizontal="40dp"
                            android:src="@drawable/ic_line_black"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_below="@+id/alram"
                            android:background="@drawable/ic_line_black"
                            />

                        <TextView
                            android:id="@+id/text_check"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="일주일 점검"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/check"
                            android:layout_below="@+id/line1"
                            android:fontFamily="@font/nanum_light"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            />
                        <ImageView
                            android:id="@+id/check"
                            android:layout_alignStart="@+id/line1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/line1"
                            android:src="@drawable/ic_check_circle"/>

                        <ImageView
                            android:id="@+id/line2"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginHorizontal="40dp"
                            android:src="@drawable/ic_line_black"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_below="@+id/check"
                            android:background="@drawable/ic_line_black"
                            />
                        <ImageView
                            android:id="@+id/setting"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/line2"
                            android:layout_alignStart="@+id/line2"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_setting_purple"/>
                        <ImageView
                            android:id="@+id/line3"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginHorizontal="40dp"
                            android:src="@drawable/ic_line_black"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_below="@+id/setting"
                            android:background="@drawable/ic_line_black"
                            />
                        <TextView
                            android:id="@+id/text_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="설정"
                            android:layout_toRightOf="@+id/setting"
                            android:layout_below="@+id/line2"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/nanum_light"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            />
                        <ImageView
                            android:id="@+id/pro"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/line3"
                            android:layout_alignStart="@+id/line3"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_profile"/>
                        <TextView
                            android:id="@+id/text_pro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="내 정보 보기"
                            android:layout_toRightOf="@+id/pro"
                            android:layout_below="@+id/line3"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/nanum_light"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
</LinearLayout>
