<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    android:background="@color/background"
    tools:context="com.dumi.svq_ver10.Location.LocationActivity">

    <!-- header bar -->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/svq_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nanum_light"
                android:text="Q."
                android:textColor="@color/main_white"
                android:textSize="18pt" />

            <TextView
                android:id="@+id/s_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/Q"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanum_light"
                android:padding="5dp"
                android:text="지금 기분이 어떠신가요?"
                android:textColor="@color/main_white"
                android:textSize="15pt" />

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <!-- input layout -->
    <RelativeLayout
        android:id="@+id/input_layout"
        android:layout_below="@+id/svq_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_search"
            android:layout_marginRight="15dp"
            />

        <EditText
            android:id="@+id/edit_address"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_gps"
            android:background="@drawable/line_edit_bottom"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:layout_centerVertical="true"
            android:hint="지번, 도로명, 건물명으로 찾기"
            android:fontFamily="@font/nanum_light"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="30dp"
            android:paddingRight="50dp"
            android:textColor="#000000"
            android:layout_marginBottom="25dp"
            android:textColorHint="@color/main_black"
            android:textSize="8pt" />
        <ImageView
            android:id="@+id/under0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_address"
            android:src="@drawable/mainline" />

        <ImageButton
            android:id="@+id/btn_gps"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_map"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>

    <!-- 주소 리스트 -->
    <LinearLayout
        android:id="@+id/view_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/input_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:visibility="visible"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:id="@+id/result1"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray">
            <TextView
                android:text="검색 결과"
                android:textSize="@dimen/list_text_size"
                android:layout_marginLeft="10dp"
                android:padding="@dimen/side_list_padding"
                android:fontFamily="@font/nanum_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ListView
            android:id="@+id/list_address_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/set_loc_layout"
            android:divider="#dcdcdc"
            android:dividerHeight="1dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:choiceMode="singleChoice"/>

        <RelativeLayout
            android:id="@+id/set_loc_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/main_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="12dp"
                android:fontFamily="@font/nanum_regular"
                android:text="선택한 위치로 설정"
                android:textColor="@color/background"
                android:textSize="10pt" />
        </RelativeLayout>

    </LinearLayout>


    <!-- 지도 레이아웃 -->
    <RelativeLayout
        android:id="@+id/view_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/input_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:visibility="invisible">

        <fragment
            android:id="@+id/map_fragment"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            class="com.google.android.gms.maps.MapFragment"
            />


        <TextView
            android:id="@+id/text_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_padding"
            android:text="현재위치"
            android:textSize="@dimen/list_text_size"
            android:layout_below="@+id/map_fragment"
            android:background="@drawable/textline"
            />

        <RelativeLayout
            android:id="@+id/set_current_loc_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/dark_gray">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="완료"
                android:textColor="@color/main_white"
                android:textSize="25dp" />
        </RelativeLayout>

    </RelativeLayout>

    <!-- 최근 검색 레이아웃 -->
    <LinearLayout
        android:id="@+id/view_recent_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_list"
        android:orientation="vertical"
        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray">

            <TextView
                android:text="최근 검색"
                android:textSize="@dimen/list_text_size"
                android:layout_marginLeft="10dp"
                android:padding="@dimen/side_list_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_recent_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="@dimen/six_pt" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading_view"
        style="@android:style/Widget.Holo.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        android:visibility="gone" />

</RelativeLayout>
