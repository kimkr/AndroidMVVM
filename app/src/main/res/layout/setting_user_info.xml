<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--설정 아이템들 감싸는 레이아웃-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- header bar -->
            <android.support.design.widget.AppBarLayout
                android:id="@+id/svq_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/x_bar_header" />

            </android.support.design.widget.AppBarLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/svq_app_bar">

                <LinearLayout
                    android:id="@+id/setting1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_gray">
                    <TextView
                        android:text="계정 정보"
                        android:textSize="@dimen/list_text_size"
                        android:layout_marginLeft="10dp"
                        android:padding="@dimen/side_list_padding"
                        android:fontFamily="@font/nanum_regular"
                        android:textColor="@color/main_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/user_name"
                    android:layout_below="@+id/setting1"
                    android:background="@drawable/textline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/list_padding"
                        android:text="이름"

                        android:fontFamily="@font/nanum_regular"
                        android:textSize="@dimen/list_text_size" />
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="@dimen/list_padding"
                        android:text="이름"

                        android:fontFamily="@font/nanum_light"
                        android:textSize="@dimen/list_text_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_email"
                    android:layout_below="@+id/user_name"
                    android:background="@drawable/textline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/list_padding"
                        android:text="이메일"

                        android:fontFamily="@font/nanum_regular"
                        android:textSize="@dimen/list_text_size" />
                    <TextView
                        android:id="@+id/useremail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="@dimen/list_padding"
                        android:text="이름"
                        android:fontFamily="@font/nanum_light"
                        android:textSize="@dimen/list_text_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_phone"
                    android:layout_below="@+id/user_email"
                    android:background="@drawable/textline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/list_padding"
                        android:text="연락처"
                        android:fontFamily="@font/nanum_regular"
                        android:textSize="@dimen/list_text_size" />
                    <TextView
                        android:id="@+id/userphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="@dimen/list_padding"
                        android:text="이름"
                        android:fontFamily="@font/nanum_light"
                        android:textSize="@dimen/list_text_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_gender"
                    android:layout_below="@+id/user_phone"
                    android:background="@drawable/textline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/list_padding"
                        android:text="성별"

                        android:fontFamily="@font/nanum_regular"
                        android:textSize="@dimen/list_text_size" />
                    <TextView
                        android:id="@+id/usergender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="@dimen/list_padding"
                        android:text="이름"
                        android:fontFamily="@font/nanum_light"
                        android:textSize="@dimen/list_text_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_birth"
                    android:layout_below="@+id/user_gender"
                    android:background="@drawable/textline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/list_padding"
                        android:text="생년월일"
                        android:fontFamily="@font/nanum_regular"
                        android:textSize="@dimen/list_text_size" />
                    <TextView
                        android:id="@+id/userbirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="@dimen/list_padding"
                        android:fontFamily="@font/nanum_light"
                        android:text="이름"
                        android:textSize="@dimen/list_text_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_loc_layout"
                    android:layout_below="@+id/user_birth"
                    android:background="@drawable/textline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_user_loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/list_padding"
                        android:fontFamily="@font/nanum_regular"
                        android:text="사용자 위치"
                        android:textSize="@dimen/list_text_size" />

                    <TextView
                        android:id="@+id/loc_data_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="위치"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/btn_right"
                        android:fontFamily="@font/nanum_light"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:textSize="@dimen/list_text_size"
                        />

                    <ImageView
                        android:id="@+id/btn_right"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/btn_next"
                        />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/logout_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/main_black"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="로그아웃"
                android:textColor="@color/background"
                android:textSize="@dimen/big_text_size"
                android:padding="10dp"
                />

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/svq_ham_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/activity_ham_menu" />

</android.support.v4.widget.DrawerLayout>
