<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/item_profile_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/item_profile_img">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_title"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:textSize="8sp" />


        </RelativeLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="4dp"
        android:textColor="#000000"
        android:textSize="12sp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_likes"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />


        <TextView
            android:id="@+id/item_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@+id/img_likes"
            android:text="170"
            android:textColor="#000000"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/item_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="-2dp"
            android:text="1.6K Comments"
            android:textColor="#000000"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/item_shares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="-2dp"
            android:text="50K Shares"
            android:textColor="#000000"
            android:textSize="8sp" />


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:background="#000000" />

</LinearLayout>