<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_white"
    android:id="@+id/drawer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--설정 아이템들 감싸는 레이아웃-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- header bar -->
            <android.support.design.widget.AppBarLayout
                android:id="@+id/svq_app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/x_bar_header" />

            </android.support.design.widget.AppBarLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/svq_app_bar">

                <!-- 위치 수집 시간대 영역 -->
                <RelativeLayout
                    android:id="@+id/setting1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/setting2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/light_gray">
                        <TextView
                            android:text="위치 수집 시간대"
                            android:textColor="@color/main_black"
                            android:fontFamily="@font/nanum_regular"
                            android:textSize="@dimen/list_text_size"
                            android:layout_marginLeft="10dp"
                            android:padding="@dimen/side_list_padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- 시작 시간 -->
                    <TextView
                        android:id="@+id/start_time_btn"
                        android:layout_below="@+id/setting2"
                        android:text="오전 9시"
                        android:textSize="25dp"
                        android:fontFamily="@font/nanum_light"
                        android:textColor="@color/main_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="50dp"
                        />

                    <TextView
                        android:text="-"
                        android:textSize="25dp"
                        android:fontFamily="@font/nanum_light"
                        android:textColor="@color/main_black"
                        android:layout_below="@+id/setting2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        />

                    <!-- 끝 시간 -->
                    <TextView
                        android:id="@+id/end_time_btn"
                        android:layout_below="@+id/setting2"
                        android:text="오후 9시"
                        android:fontFamily="@font/nanum_light"
                        android:textColor="@color/main_black"
                        android:textSize="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50dp"
                        />

                    <TimePicker
                        android:id="@+id/tp"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_below="@id/end_time_btn"
                        android:layout_alignStart="@+id/start_time_btn"
                        android:timePickerMode="spinner"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="90dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="160dp"
                        android:layout_alignStart="@+id/start_time_btn"
                        android:layout_below="@id/end_time_btn"
                        app:srcCompat="@color/main_white" />

                    <Button
                        android:id="@+id/set_start_btn"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="완료"
                        android:fontFamily="@font/nanum_light"
                        android:layout_alignEnd="@+id/imageView"
                        android:layout_below="@+id/end_time_btn"
                        android:layout_marginTop="50dp"
                        android:visibility="invisible"
                        android:background="@drawable/clicked_btn_line"
                        android:textColor="@color/main_color"
                        android:textSize="20dp"
                        />

                    <Button
                        android:id="@+id/set_end_btn"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="완료"
                        android:fontFamily="@font/nanum_light"
                        android:layout_alignEnd="@+id/imageView"
                        android:layout_below="@+id/end_time_btn"
                        android:layout_marginTop="50dp"
                        android:visibility="invisible"
                        android:background="@drawable/clicked_btn_line"
                        android:textColor="@color/main_color"
                        android:textSize="20dp"
                        />



                </RelativeLayout>




                <!-- 위치 수집 간격 영역 -->
                <RelativeLayout
                    android:layout_below="@+id/setting1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/setting3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/light_gray">
                        <TextView
                            android:text="위치 수집 간격"
                            android:textColor="@color/main_black"
                            android:textSize="@dimen/list_text_size"
                            android:fontFamily="@font/nanum_regular"
                            android:layout_marginLeft="10dp"
                            android:padding="@dimen/side_list_padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <EditText
                        android:id="@+id/complete_time_txt"
                        android:layout_below="@+id/setting3"
                        android:text=""
                        android:textSize="30sp"
                        android:fontFamily="@font/nanum_light"
                        android:textColor="@color/main_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:layout_centerHorizontal="true"
                        android:inputType="number|phone"
                        android:focusable="false"
                        />
                    <TextView
                        android:layout_below="@+id/setting3"
                        android:text="분"
                        android:fontFamily="@font/nanum_light"
                        android:textColor="@color/main_black"
                        android:textSize="30sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/complete_time_txt"
                        android:layout_marginTop="110dp"
                        />

                    <!-- 칸 나누는 선
                    <View
                        android:id="@+id/view_divider"
                        android:layout_width="200dp"
                        android:layout_height="1dp"
                        android:layout_below="@id/complete_time_txt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@color/main_black" />

                        -->



                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/finish_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/main_color"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="설정 완료"
                android:fontFamily="@font/nanum_regular"
                android:textColor="@color/main_white"
                android:textSize="@dimen/big_text_size"
                android:padding="10dp"
                />

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/svq_ham_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/activity_ham_menu" />

</android.support.v4.widget.DrawerLayout>