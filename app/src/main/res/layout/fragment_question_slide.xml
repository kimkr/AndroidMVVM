<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewmodel"
            type="com.dumi.svq_ver10.ui.question.slide.SlideViewModel" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <import type="com.dumi.svq_ver10.ui.main.Screen" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/purple"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nanum_light"
                android:text="Q."
                android:textColor="@color/white"
                android:textSize="18pt" />

            <TextView
                android:id="@+id/s_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/Q"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanum_light"
                android:padding="5dp"
                android:text="지금 기분이 어떠신가요?"
                android:textColor="@color/white"
                android:textSize="15pt" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <SeekBar
                android:id="@+id/seekbar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20dp"
                android:max="@{viewmodel.max}"
                android:progress="5" />

            <TextView
                android:id="@+id/tv_slide_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/seekbar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/nanum_light"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="25pt" />

            <TextView
                android:id="@+id/left1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/seekbar"
                android:layout_below="@+id/seekbar"
                android:text="@{viewmodel.left}"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/right1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/seekbar"
                android:layout_below="@+id/seekbar"
                android:text="@{viewmodel.right}"
                android:textColor="@color/black"
                android:textSize="10pt" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:onClickListener="@{onClickListener}"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/gray_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanum_regular"
                android:padding="5dp"
                android:text="완 료"
                android:textColor="@color/white"
                android:textSize="10pt" />
        </RelativeLayout>

    </LinearLayout>

</layout>
