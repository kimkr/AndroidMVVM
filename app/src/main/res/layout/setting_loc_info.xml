<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer">

    <!--설정 아이템들 감싸는 레이아웃-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- header bar -->
        <android.support.design.widget.AppBarLayout
            android:id="@+id/svq_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/x_bar_header" />

        </android.support.design.widget.AppBarLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/svq_app_bar">

            <LinearLayout
                android:id="@+id/setting1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_gray">
                <TextView
                    android:text="위치 정보 수집 설정"
                    android:fontFamily="@font/nanum_regular"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/list_text_size"
                    android:layout_marginLeft="10dp"
                    android:padding="@dimen/side_list_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/all_agree"
                android:layout_below="@+id/setting1"
                android:background="@drawable/textline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/list_padding"
                    android:text="항상 허용"
                    android:fontFamily="@font/nanum_light"
                    android:textColor="@color/main_black"
                    android:textSize="@dimen/list_text_size" />

                <Switch
                    android:id="@+id/all_agree_switch"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/CustomSwitch"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/part_agree"
                android:layout_below="@+id/all_agree"
                android:background="@drawable/textline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/list_padding"
                    android:text="수집 시간 설정"
                    android:textColor="@color/main_black"
                    android:fontFamily="@font/nanum_light"
                    android:textSize="@dimen/list_text_size" />

                <TextView
                    android:id="@+id/loc_data_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_light"
                    android:textColor="@color/main_black"
                    android:layout_toRightOf="@+id/text4"
                    android:paddingVertical="@dimen/list_padding"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_next"
                    />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/svq_ham_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/activity_ham_menu" />

</android.support.v4.widget.DrawerLayout>