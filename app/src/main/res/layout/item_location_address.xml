<?xml version="1.0" encoding="utf-8"?>
<com.dumi.svq_ver10.ui.components.CheckableRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_item_location_address"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/line_gray_light">

    <TextView
        android:id="@+id/tx_location_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/cb_item"
        android:maxLines="1"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="9pt" />

    <CheckBox
        android:id="@+id/cb_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:buttonTint="@color/black"
        android:clickable="false"
        android:focusable="false"
        android:paddingRight="15dp" />

</com.dumi.svq_ver10.ui.components.CheckableRelativeLayout>
